<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Screen name</th>
      <th>Email</th>
      <th>Salt</th>
      <th>Encrypted password</th>
      <th>Phone number</th>
      <th>Cc#</th>
      <th>Cc expiration</th>
      <th>Cvv2</th>
      <th>Zipcode</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Languages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.screen_name %></td>
        <td><%= user.email %></td>
        <td><%= user.salt %></td>
        <td><%= user.encrypted_password %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.cc# %></td>
        <td><%= user.cc_expiration %></td>
        <td><%= user.cvv2 %></td>
        <td><%= user.zipcode %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.languages %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

