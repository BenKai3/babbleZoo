<p id="notice"><%= notice %></p>

<h1>Listing Translators</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Screen name</th>
      <th>Profession</th>
      <th>Other qualifications</th>
      <th>Rate per minute</th>
      <th>Email</th>
      <th>Salt</th>
      <th>Encrypted password</th>
      <th>Phone number</th>
      <th>Cc#</th>
      <th>Cc expiration</th>
      <th>Cvv2</th>
      <th>Zipcode</th>
      <th>Overall rating</th>
      <th>Total transactions</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @translators.each do |translator| %>
      <tr>
        <td><%= translator.first_name %></td>
        <td><%= translator.last_name %></td>
        <td><%= translator.screen_name %></td>
        <td><%= translator.profession %></td>
        <td><%= translator.other_qualifications %></td>
        <td><%= translator.rate_per_minute %></td>
        <td><%= translator.email %></td>
        <td><%= translator.salt %></td>
        <td><%= translator.encrypted_password %></td>
        <td><%= translator.phone_number %></td>
        <td><%= translator.cc# %></td>
        <td><%= translator.cc_expiration %></td>
        <td><%= translator.cvv2 %></td>
        <td><%= translator.zipcode %></td>
        <td><%= translator.overall_rating %></td>
        <td><%= translator.total_transactions %></td>
        <td><%= translator.created_at %></td>
        <td><%= translator.updated_at %></td>
        <td><%= link_to 'Show', translator %></td>
        <td><%= link_to 'Edit', edit_translator_path(translator) %></td>
        <td><%= link_to 'Destroy', translator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

